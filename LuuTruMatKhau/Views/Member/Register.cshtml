<div class="container">
    <div class="row">
        <div class="col-lg-3 col-md-2"></div>
        <div class="col-lg-6 col-md-8 login-box">
            <div class="col-lg-12 login-key">
                <i class="fa fa-key" aria-hidden="true"></i>
            </div>
            <div class="col-lg-12 login-title">
                ADMIN PANEL
            </div>

            <div class="col-lg-12 login-form">
                <div class="col-lg-12 login-form">
                    <form method="post" asp-action="Register" asp-controller="Member">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label class="form-control-label">USERNAME</label>
                            <input type="text" class="form-control" asp-for="UserName">
                            <span asp-validation-for="UserName"></span>
                        </div>
                        <div class="form-group">
                            <label class="form-control-label">EMAIL</label>
                            <input type="text" class="form-control" asp-for="Email" />
                            <span asp-validation-for="Email"></span>
                        </div>
                        <div class="form-group">
                            <label class="form-control-label">PASSWORD</label>
                            <input type="password" class="form-control" asp-for="Password" />
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div class="form-group">
                            <label class="form-control-label">REPEAT PASSWORD</label>
                            <input type="password" class="form-control" asp-for="RepeatPassword" />
                            <span asp-validation-for="RepeatPassword"></span>
                        </div>
                        <div class="col-lg-12 loginbttm">
                            <div class="col-lg-6 login-btm login-text">
                                &nbsp; @Html.ValidationMessage("ErrorMes")
                            </div>
                            <div class="col-lg-6 login-btm login-button">
                                <button type="submit" class="btn btn-outline-primary">REGISTER</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-3 col-md-2"></div>
        </div>
    </div>
</div>


@section scripts{
    <script type="text/javascript">

    var showpopup = parseInt('@ViewBag.IsShowModalVerify' || 0);
    if (showpopup === 1) {

        var modal = $('#modal-default');
        modal.find('.modal-title').html("Activation");

        var body = '<div class="form-group">';
        body += '<label>Enter code:</label>'
        body += '<input type="text" class="form-control" id="code-g"/>';
        body += '<input type="hidden" id="usName" value="@ViewBag.UserName"/>';
        body += '<h6 class="text-danger" id="md-mes">Enter code you recieved on email.</h6>'
        body += '</div>';

        modal.find('.modal-body').html(body);
        modal.find('.modal-footer').html(' <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button> <button type="button" class="btn btn-primary" onclick="activeMember()">Confirm</button>');
        modal.modal('show');

    }

      
    </script>

}


