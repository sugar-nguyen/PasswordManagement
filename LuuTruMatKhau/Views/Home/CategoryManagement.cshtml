@model List<LuuTruMatKhau.Model.Category>
@{
    ViewData["Title"] = "Category management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card card-primary card-outline">
    <div class="card-body">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="w-100 text-right">
                    <button class="btn btn-outline-light d-inline-block" onclick="addCategory()"><i class="fas fa-plus-circle"></i> Add Category</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="card card-primary card-outline" id="card-tb-cate">
    <div class="card-header">
        <h3 class="card-title">
            List Password Category
        </h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <partial name="_GetGetCategoryViewModel" model="Model" />
    </div>
</div>

@section scripts{
    <script src="~/js/Category.js" asp-append-version="true"></script>
    <script>
        function addCategory() {
            Common.createModalCustom(
                "INSERT CATEGORY",
                '/home/_GetViewInsertCategory',
                {},
                700,
                "Save",
                'Category.saveCate()',
                null,
                null
            );
        }

        function openModalEditCate(cateID) {
            Common.createModalCustom(
                "EDIT CATEGORY",
                '/home/_GetViewInsertCategory',
                { cateID: cateID },
                700,
                "Save",
                'Category.updateCate(' + cateID + ')',
                null,
                null
            );
        }

        Common.appendDataTable($('#table-cate'));
    </script>

}